+++ b/gtk/gtkwidget.c
@@ -7477,15 +7477,16 @@ gtk_widget_render_icon (GtkWidget      *widget,
                         GtkIconSize     size,
                         const gchar    *detail)
 {
+  GdkPixbuf *retval, *variant;
   GtkIconSet *icon_set;
-  GdkPixbuf *retval;
-  
